<%- include('../header') %>

<h2 class="mb-4">Reservations</h2>

<% if (reservations.length === 0) { %>
  <p class="text-muted">No reservations yet.</p>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Date</th>
          <th>Time Slot</th>
          <th>Customer</th>
          <th>Email</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% reservations.forEach(r => { %>
          <tr>
            <td><%= helpers.formatDate(r.reservation_date) %></td>
            <td><%= r.time_slot %></td>
            <td><%= r.customer_name || 'N/A' %></td>
            <td><%= r.customer_email || 'N/A' %></td>
            <td><%- helpers.statusBadge(r.status || 'confirmed') %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } %>

<%- include('../footer') %>
