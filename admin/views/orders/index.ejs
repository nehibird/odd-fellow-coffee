<%- include('../header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Orders</h2>
  <a href="<%= base %>/orders/export-csv" class="btn btn-outline-secondary btn-sm">
    <i class="bi bi-download me-1"></i> Export for Pirateship
  </a>
</div>

<ul class="nav nav-tabs mb-3">
  <li class="nav-item">
    <a class="nav-link <%= filter === 'all' ? 'active' : '' %>" href="<%= base %>/orders">All</a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= filter === 'pending' ? 'active' : '' %>" href="<%= base %>/orders?status=pending">Pending</a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= filter === 'confirmed' ? 'active' : '' %>" href="<%= base %>/orders?status=confirmed">Confirmed</a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= filter === 'shipped' ? 'active' : '' %>" href="<%= base %>/orders?status=shipped">Shipped</a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= filter === 'delivered' ? 'active' : '' %>" href="<%= base %>/orders?status=delivered">Delivered</a>
  </li>
</ul>

<% if (orders.length === 0) { %>
  <p class="text-muted">No orders found.</p>
<% } else { %>
  <div id="bulk-bar" class="alert alert-info d-flex align-items-center gap-2 mb-3" style="display: none !important;">
    <span><strong id="bulk-count">0</strong> selected</span>
    <form method="POST" action="<%= base %>/orders/bulk-status" id="bulk-form" class="d-inline">
      <input type="hidden" name="status" id="bulk-status-val">
      <div id="bulk-ids"></div>
      <button type="button" class="btn btn-sm btn-primary" onclick="submitBulk('confirmed')">Bulk Confirm</button>
    </form>
  </div>
  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th><input type="checkbox" id="select-all"></th>
          <th>#</th>
          <th>Customer</th>
          <th>Items</th>
          <th>Total</th>
          <th>Status</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <% const addr = helpers.parseAddress(order.shipping_address); %>
          <% const items = helpers.parseItems(order.items); %>
          <tr>
            <td><input type="checkbox" class="order-check" value="<%= order.id %>"></td>
            <td><strong><%= order.id %></strong></td>
            <td>
              <div><%= order.customer_name || 'N/A' %></div>
              <% if (order.customer_email) { %>
                <small class="text-muted"><%= order.customer_email %></small>
              <% } %>
              <% if (addr) { %>
                <div class="mt-1">
                  <small class="text-muted">
                    <i class="bi bi-geo-alt"></i>
                    <%= addr.line1 || '' %><%= addr.line2 ? ', ' + addr.line2 : '' %><%= addr.city ? ', ' + addr.city : '' %><%= addr.state ? ', ' + addr.state : '' %> <%= addr.postal_code || '' %>
                  </small>
                </div>
              <% } %>
              <% if (order.tracking_number) { %>
                <div class="mt-1">
                  <small class="text-muted"><i class="bi bi-truck"></i> <%= order.tracking_number %></small>
                </div>
              <% } %>
            </td>
            <td>
              <% items.forEach(item => { %>
                <div><small><%= item.quantity || 1 %>x <%= item.name || 'item' %></small></div>
              <% }); %>
            </td>
            <td>
              <%= helpers.formatCents(order.total_cents) %>
              <% if (order.shipping_cents) { %>
                <br><small class="text-muted">+ <%= helpers.formatCents(order.shipping_cents) %> ship</small>
              <% } %>
            </td>
            <td><%- helpers.statusBadge(order.status) %></td>
            <td><small><%= helpers.formatDate(order.created_at) %></small></td>
            <td class="text-nowrap">
              <% if (addr) { %>
                <button class="btn btn-sm btn-outline-secondary mb-1" title="Copy shipping address for Pirate Ship" onclick="copyShipping(this, <%= JSON.stringify(JSON.stringify({ name: order.shipping_name || order.customer_name || '', email: order.customer_email || '', line1: addr.line1 || '', line2: addr.line2 || '', city: addr.city || '', state: addr.state || '', zip: addr.postal_code || '' })) %>)">
                  <i class="bi bi-clipboard"></i> Copy Address
                </button>
              <% } %>
              <% if (order.status === 'pending') { %>
                <form method="POST" action="<%= base %>/orders/<%= order.id %>/status" class="d-inline">
                  <input type="hidden" name="status" value="confirmed">
                  <button class="btn btn-sm btn-outline-primary">Confirm</button>
                </form>
              <% } %>
              <% if (order.status === 'confirmed' && order.shipping_method && !order.shipping_method.includes('Local')) { %>
                <button class="btn btn-sm btn-outline-info mb-1" onclick="shipOrder(this, <%= order.id %>)">
                  <i class="bi bi-truck"></i> Mark Shipped
                </button>
                <form method="POST" action="<%= base %>/orders/<%= order.id %>/status" id="ship-form-<%= order.id %>" style="display:none;">
                  <input type="hidden" name="status" value="shipped">
                  <input type="hidden" name="tracking_number" id="tracking-<%= order.id %>">
                </form>
              <% } %>
              <% if (order.status === 'confirmed' && (!order.shipping_method || order.shipping_method.includes('Local'))) { %>
                <form method="POST" action="<%= base %>/orders/<%= order.id %>/status" class="d-inline">
                  <input type="hidden" name="status" value="delivered">
                  <button class="btn btn-sm btn-outline-success"><i class="bi bi-check-circle"></i> Mark Delivered</button>
                </form>
              <% } %>
              <% if (order.status === 'shipped') { %>
                <form method="POST" action="<%= base %>/orders/<%= order.id %>/status" class="d-inline">
                  <input type="hidden" name="status" value="delivered">
                  <button class="btn btn-sm btn-outline-success"><i class="bi bi-check-circle"></i> Mark Delivered</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } %>

<%- include('../footer') %>
